<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/app" />

        <!-- Title -->
        <TextView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="欢迎注册~"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="20dp"/>

        <!-- 昵称输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nickname"
                app:tint="@color/secondary_text" />

            <EditText
                android:id="@+id/et_register_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入昵称（唯一）"
                android:inputType="text"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 途迹号输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_number"
                app:tint="@color/secondary_text" />

            <EditText
                android:id="@+id/et_register_trail_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入途迹号（唯一）"
                android:inputType="text"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 密码输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_password"
                app:tint="@color/secondary_text" />

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入密码（6-20位）"
                android:inputType="textPassword"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 确认密码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_password"
                app:tint="@color/secondary_text" />

            <EditText
                android:id="@+id/et_register_confirm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请确认密码"
                android:inputType="textPassword"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 手机号输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                app:tint="@color/secondary_text" />

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 签名输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_signature"
                app:tint="@color/secondary_text" />

            <EditText
                android:id="@+id/et_register_signature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入签名"
                android:inputType="text"
                android:maxLines="2" />
        </LinearLayout>

        <!-- 性别选择 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gender"
                app:tint="@color/secondary_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="性别"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:layout_marginLeft="20dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- 生日选择 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_birthday"
                app:tint="@color/secondary_text" />

            <TextView
                android:id="@+id/tv_birthday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="生日"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- 年份选择 -->
            <Spinner
                android:id="@+id/sp_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:spinnerMode="dropdown"
                android:padding="8dp"
                android:background="@android:color/transparent" />

            <!-- 月份选择 -->
            <Spinner
                android:id="@+id/sp_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:spinnerMode="dropdown"
                android:padding="8dp"
                android:background="@android:color/transparent" />

            <!-- 日期选择 -->
            <Spinner
                android:id="@+id/sp_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:spinnerMode="dropdown"
                android:padding="8dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- 注册按钮 -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_button"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 登录链接 -->
        <TextView
            android:id="@+id/tv_login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？立即登录"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>