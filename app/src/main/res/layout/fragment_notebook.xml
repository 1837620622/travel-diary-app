<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragment.NotebookFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="我的日记本"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- 日记本数量 -->
        <TextView
            android:id="@+id/tvNotebookCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="本子 1 本"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <!-- ViewPager显示日记本封面 -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerNotebook"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- 页面指示器 -->
        <LinearLayout
            android:id="@+id/layoutIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone" />

        <!-- 日记本列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNotebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp" />

        <!-- 空状态 -->
        <LinearLayout
            android:id="@+id/layoutEmptyNotebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty_notebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="还没有日记本哦"
                android:textSize="16sp"
                android:textColor="@color/text_secondary" />

            <Button
                android:id="@+id/btnCreateNotebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="创建日记本"
                android:background="@drawable/btn_primary" />

        </LinearLayout>

    </LinearLayout>

    <!-- 悬浮创建按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddNotebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorPrimary"
        app:tint="@color/white"
        android:contentDescription="创建日记本" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
