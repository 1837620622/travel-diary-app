<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TrailDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 文字 -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 导航栏 -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- 窗口背景 -->
        <item name="android:windowBackground">@color/gray_50</item>

        <!-- 控件样式 -->
        <item name="buttonStyle">@style/Widget.TrailDiary.Button</item>
        <item name="editTextStyle">@style/Widget.TrailDiary.EditText</item>
        <item name="textInputStyle">@style/Widget.TrailDiary.TextInputLayout</item>
    </style>
</resources>